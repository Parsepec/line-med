    import Icon from "heroicons-astro/Heroicon.astro";
---

<footer class="bg-gray-800">
    <div class="flex flex-col lg:flex-row justify-center">
        <div class="w-full lg:w-1/3 flex flex-col px-12">
            <img src="/logo.png" class="h-32 w-32" alt="">
            <p class="text-white mt-6 text-justify font-open">Line Med provides consistent quality care with Telepsychiatry,
                Outpatient
                Services, as well as
                support Living Residential SERVICES.</p>
        </div>
        <div class="flex flex-col px-32 py-16">
            <h1 class="text-white text-xl mb-6 font-header">Useful Links</h1>
            <ul>
                <li class="mb-2 text-white font-open font-semibold"><a href="">Home</a></li>
                <li class="mb-2 text-white font-open font-semibold"><a href="">About</a></li>
                <li class="mb-2 text-white font-open font-semibold"><a href="">Our Services</a></li>
                <li class="mb-2 text-white font-open font-semibold"><a href="">Request an Appointment</a></li>
                <li class="mb-2 text-white font-open font-semibold"><a href="">Contact Us</a></li>
            </ul>
        </div>
        <div class="flex flex-col px-32 py-16">
            <h1 class="text-white text-xl mb-6 font-header">Contact Links</h1>
            <ul>
                <li class="mb-2 text-white font-open font-semibold "><a href="" class="inline-flex items-center">
                        <Icon iconCode="phone" iconStyle="outline" customClasses="h-6 w-4 mr-1" />
                        <p>080 000 000</p>
                    </a></li>
                <li class="mb-2 text-white font-open font-semibold "><a href="" class="inline-flex items-center">
                        <Icon iconCode="mail" iconStyle="outline" customClasses="h-6 w-4 mr-1" />
                        <p>info@linemed.com</p>
                    </a></li>
                <li class="mb-2 text-white font-open font-semibold "><a href="" class="inline-flex items-center">
                        <Icon iconCode="location-marker" iconStyle="outline" customClasses="h-6 w-4 mr-1" />
                        <p>Plot 5, Abuja, Nigeria.</p>
                    </a></li>
            </ul>
        </div>

    </div>
</footer>